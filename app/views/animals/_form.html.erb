<%= render "layouts/errors", :object => @animal %>

<%= form_for @animal do |f| %>
  <div class="form-group">
    <%= f.label :species, class: "control-label"%>
    <%= f.text_field :species, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :gender, class: "control-label" %>
    <%= f.text_field :gender, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "control-label" %>
    <%= f.file_field :image, class: "form-control" %>
    <% if f.object.image? %>
      <%= image_tag f.object.image.thumb.url %>
      <%= f.label :remove_image, class: "control-label" %>
      <%= f.check_box :remove_image %>
    <% end %>
  </div>
  <%= f.submit class: "btn" %>
<% end %>
